  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.0",
    "lodash.camelcase": "^4.3.0",
    "lodash.random": "^3.2.0",
    "mustache": "^4.0.1"
  },
  "devDependencies": {
    "@bubkoo/commitlint-config": "^1.0.1",
    "@bubkoo/eslint-config": "^1.2.0",
    "@bubkoo/tsconfig": "^1.0.0",
    "@types/lodash.camelcase": "^4.3.7",
    "@types/lodash.random": "^3.2.7",
    "@types/mustache": "^4.2.1",
    "@types/node": "^18.8.3",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.25.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
